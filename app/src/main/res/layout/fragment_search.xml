<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sdsu.vyshak.hometownchat.SearchFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:weightSum="1">

            <TextView
                android:id="@+id/loggedUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:inputType="none"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/logged_user"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="italic"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:gravity="center"
                android:inputType="none"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="@string/find_friends_by_country_state_city_or_year_at_sdsu"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="none"
                android:paddingTop="20dp"
                android:text="@string/country"
                android:textAlignment="center" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner_search_country" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="none"
                android:paddingTop="10dp"
                android:text="@string/state"
                android:textAlignment="center" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinner_search_state"
                android:ems="10"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="none"
                android:paddingTop="10dp"
                android:text="@string/year"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />


            <Spinner
                android:id="@+id/spinner_search_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/clear"
                style="?android:attr/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.17"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:text="@string/clear"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="RtlSymmetry">

                <Button
                    android:id="@+id/searchlist"
                    style="?android:attr/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/findlist"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/searchmap"
                    style="?android:attr/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:text="@string/findmap"
                    android:textAlignment="center" />

            </LinearLayout>
</LinearLayout>
    </ScrollView>

</FrameLayout>
